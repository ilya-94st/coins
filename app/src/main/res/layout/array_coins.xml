<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bitcoin"
            type="com.example.staselovich_p4.model.CoinModel" />
    </data>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/s">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
        android:layout_height="@dimen/dimens40"
        android:id="@+id/imgCoin"
        app:loadImage="@{bitcoin.id}"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textCoin"
        android:text="@{bitcoin.symbol}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry"
        style="@style/text_array_coins" />
</LinearLayout>
</layout>